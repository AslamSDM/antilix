generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User model to store user information
model User {
  id                 String              @id @default(cuid())
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  email              String?             @unique
  username           String?             @unique
  walletAddress      String? // User's blockchain wallet address (may be Solana or Ethereum)
  walletType         String? // Type of wallet (solana or ethereum)
  walletVerified     Boolean             @default(false) // Whether the wallet has been verified
  evmAddress         String?             @unique // User's EVM blockchain address
  solanaAddress      String?             @unique // User's Solana blockchain address
  referralCode       String              @unique // Unique referral code for this user
  referrer           User?               @relation("UserReferrals", fields: [referrerId], references: [id])
  referrerId         String?             @unique // Each user can have only one referrer
  referrals          User[]              @relation("UserReferrals")
  verified           Boolean             @default(false)
  evmVerified        Boolean             @default(false) // Verification status of EVM address
  solanaVerified     Boolean             @default(false) // Verification status of Solana address
  verificationTokens VerificationToken[]
  purchases          Purchase[] // Renamed from solanaPurchases and relation updated
  receivedBonuses    ReferralBonus[] // Bonuses received for referring users
}

// Verification token model for email and wallet verification
model VerificationToken {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  token     String    @unique
  expires   DateTime
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  type      TokenType

  @@index([userId])
}

// Enum for token types
enum TokenType {
  EMAIL_VERIFICATION
  EVM_VERIFICATION
  SOLANA_VERIFICATION
  PASSWORD_RESET
}

// Enum for Network Types
enum NetworkType {
  SOLANA
  BSC
  // Potentially others like ETHEREUM, POLYGON etc.
}

// Renamed from SolanaPurchase to Purchase and made more generic
model Purchase {
  id                   String         @id @default(cuid())
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
  userId               String
  user                 User           @relation(fields: [userId], references: [id])
  network              NetworkType // Network used for the purchase
  paymentAmount        Decimal // Amount of currency paid (e.g., 100 USDT or 0.5 BNB)
  paymentCurrency      String // Currency used for payment (e.g., "USDT", "BNB")
  lmxTokensAllocated   Decimal // Amount of LMX tokens allocated
  pricePerLmxInUsdt    Decimal // Price of 1 LMX in USDT at the time of purchase
  transactionSignature String         @unique // Blockchain transaction signature
  status               PurchaseStatus @default(PENDING)
  hasReferralBonus     Boolean        @default(false) // Whether a referral bonus has been processed for this purchase
  referralBonus        ReferralBonus?

  @@index([userId])
  @@index([transactionSignature])
}

// New enum for purchase status
enum PurchaseStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

// Referral bonus model to track referral rewards
model ReferralBonus {
  id              String              @id @default(cuid())
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  referrerId      String // ID of the user who referred someone
  purchaseId      String              @unique // ID of the purchase that triggered this bonus (one-to-one with Purchase)
  purchaseAmount  Decimal // Original purchase amount
  bonusPercentage Float // Percentage of the purchase that was given as bonus
  bonusAmount     Decimal // Amount of bonus tokens awarded  
  bonusStatus     ReferralBonusStatus @default(PENDING)
  purchase        Purchase            @relation(fields: [purchaseId], references: [id])
  referrer        User                @relation(fields: [referrerId], references: [id])

  @@index([referrerId])
}

// Status of the referral bonus
enum ReferralBonusStatus {
  PENDING
  PROCESSED
  FAILED
}
